<div class=" container row mx-auto">
<div class="col-8 mt-5 mx-auto shadow p-3 mb-5 bg-white rounded row">

  <div class="container">

    <h3 class="fw-bold">User Events</h3>
    <div class="row">
      <% @user.created_events.each do |event| %>
        <div class="col-6">
        <%= render partial: "layouts/event", locals: {event: event} %>
        </div>
      <%end%>
    </div>
  </div>
  <hr>
  <div class="container mt-3">
  <h3 class="fw-bold">Attending</h3>
  <div class="row mt-2">

    <div class="col-6">

      <div>
        <h3>Previously Attended Events</h3>
        <%= display_past_events(User.find(session[:current_user_id])) %>
      </div>

    </div>

    <div class="col-6">

      <div>
        <h3>Upcoming Events</h3>
        <%@user.attended_events.each do |event| %>
          <%= display_upcoming_events(@user.id, event) %>
        <%end%>
      </div>

    </div>

    
  </div>

  
  </div>
</div>
  
  <div class="col-4 mt-5 mx-auto ">
 
  <div class="shadow p-3 mb-5 bg-white rounded">
      <%=render partial: 'users/request' %>
  </div>
  </div>
</div>

