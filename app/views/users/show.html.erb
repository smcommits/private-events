<h3>User Events</h3>

<% @user.created_events.each do |event| %>
  <%= render partial: "layouts/event", locals: {event: event} %>
<%end%>

<section>
  <article>

  <h3>Previously Attended Events</h3>
    <% @user.attended_events.each do |event| %>
      <% if event.event_date.past? %>
        <%= render partial: "layouts/event", locals: {event: event} %>
      <%end%>
    <%end%>
  </article>

  <article>
    <h3>Upcoming Events</h3>
    <% @user.attended_events.each do |event| %>
      <% if event.event_date.future? %>
        <%= render partial: "layouts/event", locals: {event: event} %>
      <%end%>
    <%end%>

  </article>
</section>
