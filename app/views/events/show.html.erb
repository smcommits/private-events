<div class="container">
  <div class="row">

    <div class="col-8">
      <div class="p-3 mt-5 shadow mb-5 bg-white rounded ">
        <h3 class="fw-bold text-capitalize"><%=@event.title%></h3>
        <small class="fst-italics"><%=@event.event_date%></small>
        <p class="lead"><%=@event.description%></p>
        <%= display_invite_button(@event) %> 
        <%= display_if_invited(@event) %>
      </div>    
    </div>

    <div class="col-4">
      <div class="p-3 mt-5 shadow mb-5 bg-white rounded">
        <h3 class="fw-bold text-capitalize p-2">Attendees</h3>

        <ul class="list-group">
          <% @event.attendees.each do |attendee| %>
            <li class="list-group-item"><%= display_all_attendees(attendee, @event.id)%></li>
          <%end%>
      </ul>
      </div>
    </div>
  </div>
</div>
