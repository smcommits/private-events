<div class="container mx-auto mt-5 shadow p-3 mb-5 bg-white rounded" >
<h3>Create Event</h3>

<div>

<%= form_with model: @event do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control"%>
  
  <%= f.label :event_date %>
  <%= f.date_field :event_date, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Create Event", class: "btn btn-primary" %>

  </div>
<%end%>
</div>
